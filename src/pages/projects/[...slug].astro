---
import { getCollection } from 'astro:content';
export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
import Layout from '../../layouts/layout.astro';
---

<Layout>
    <main class="dark:text-primary-200 text-secondary-300">
        <div class="flex h-auto flex-col-reverse items-center justify-center text-center lg:flex-row w-full lg:mt-24">
            <div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
                <div>
                    <h1 class="mb-10 font-general text-black dark:text-white text-heading-5 pl-4 pr-4">
                        {entry.data.title}
                    </h1>
                </div>
                <div class="font-general text-body-1">
                    <Content />
                </div>
            </div>
            <div data-testid="hero-img" class="mb-10 flex lg:w-1/2 lg:mb-0 items-center justify-center">
                <img
                    src={entry.data.image.src}
                    alt={entry.data.image.alt}
                    loading="lazy"
                    class="h-72 w-auto rounded-lg"
                />
            </div>
        </div>
    </main>
</Layout>
<Content />
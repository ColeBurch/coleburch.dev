---
import Button from './ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-general text-black dark:text-white text-heading-4 pl-4 pr-4">
				Hi! My name is <span class="text-accent-700 dark:text-accent-400">Cole Burch</span> and I am a software engineer.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} class="dark:bg-white dark:text-black" name="learn more">Learn more</Button>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex lg:w-1/2 lg:mb-0 items-center justify-center">
		<img
			src="/HeroImage.jpg"
			alt="Hero Image"
			loading="lazy"
            class="rounded-full h-96 w-96"
		/>
	</div>
</section>
---
import { Image } from 'astro:assets';
import Tags from './tags.astro';
interface Props {
	url?: string;
    image?: {src: string, alt: string};
	alt?: string;
	title?: string;
	description?: {short: string, long: string}
    live?: string;
    github?: string;
	tags: string[];
    appImages?: {src: string, alt: string}[];
	children?: HTMLElement | HTMLElement[];
}

const { url = '#', image = {src: "", alt: ""}, alt = 'Project image', description = {short: "", long: ""}, title = 'Project title', live = "", github = "", tags = ['Tags'], appImages = ["images"] } = Astro.props;
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3 h-full">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl h-full"
	>
		<a href={url} aria-label="link to project">
			<div class="relative flex justify-center items-center overflow-hidden rounded-xl">
				<Image
					src={image.src}
					alt={image.alt}
					format="png"
					width="400"
					height="400"
					loading="lazy"
                    class="w-full"
				/>
			</div>
			<div class="mt-1 p-2">
				<h3 class="text-body-3 text-black lg:text-body-3 text-center md:text-left">{title}</h3>
				<p class="text-black text-body-4 text-center md:text-left">{description.short}</p>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>